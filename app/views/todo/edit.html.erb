<h1>
    Edit To-do #<%= @todo.id %>
    <form action="/todo/update/<%= @todo.id %>">
    <input class="text-input" name="description" id="new-todo-description" type="text" value="<%= @todo.description %>">
    <input class="text-input" name="pomodoros" id="new-pomodoro-estimate" type="number" value="<%= @todo.pomodoros %>">
    <input class="button" id="add-new-todo-button" type="submit" value="Update To-do">
</form>
</h1>

<a href="/todo/show/<%= @todo.id %>">Cancel</a>